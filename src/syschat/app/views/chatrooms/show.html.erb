<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
  <% @messages.each do |message| %>
  	<div><%= User.find(message.userId).email %>: <%= message.text %></div>
  <% end %>
</p>


<p>
<%= form_for :message, :url => {:action => 'create', :controller => 'messages'} do |f| %>
	<%= f.text_field :text, :size => 70%>
	<%= f.hidden_field :chatroom_id, :value => @chatroom.id %>
	<%= f.submit text='Uusi viesti'%>
<% end %>
</p>


